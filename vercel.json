{
  "version": 2,
  "name": "vkr",
  "builds": [
    { "src": "build/index.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "^(.*)$",
      "dest": "/frontend/dist/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "build/index.js"
    }
  ]
}
